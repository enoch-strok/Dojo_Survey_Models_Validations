@model Hogwarts.Models.HogwartsStudent

<form asp-action="register" asp-controller="student" method="post">
    <label asp-for="Name"></label>
    <input asp-for="Name" name="name">
    <br> 
    <label>Dojo Location:</label>
    <select name="dojo">
        <option value="Gryffindor">Gryffindor</option>
        <option value="Ravenclaw">Ravenclaw</option>
        <option value="Slytherin">Slytherin</option>
        <option value="Hufflepuff">Hufflepuff</option>
    </select>
    <br> 
    <label>Favorite Language:</label>
    <select name="fav_language">
        <option value="C#">C#</option>
        <option value="JS">JS</option>
        <option value="Python">Python</option>
    </select>
    <br>
    <label>Comment:</label>
    <input type="text" name="comment">
    <br>
    <button>Submit</button>
</form>
    <br>    
    <span asp-validation-for="Name" style="color:red;"></span>
    <span asp-validation-for="Comment" style="color:red;"></span>
